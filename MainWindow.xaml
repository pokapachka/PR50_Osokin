<Window x:Class="ПР50_Осокин.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ПР50_Осокин"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid VerticalAlignment="Top" Height="50" Background="#FFF0F0F0">
            <Image Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Source="/Images/icon.png" Grid.RowSpan="2"/>
            <Label Content="Жильцы дома" Margin="45,0,114.6,-0.4" VerticalContentAlignment="Center" FontSize="18" FontWeight="Bold" Grid.RowSpan="2"/>
            <Button Click="Report" Width="100" Height="25" Content="Отчет" Margin="0,10,9.6,0" Grid.RowSpan="2" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        </Grid>
        <ScrollViewer Margin="0,50,0,0">
            <StackPanel x:Name="parent"/>
        </ScrollViewer>
    </Grid>
</Window>
